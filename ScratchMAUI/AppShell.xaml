<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ScratchMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ScratchMAUI"
    xmlns:pages="clr-namespace:ScratchMAUI.Pages"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Category Fact"
        ContentTemplate="{DataTemplate pages:CategoryFactsPage}"
        Route="MainPage1" />

    <ShellContent
        Title="Fact Detail"
        ContentTemplate="{DataTemplate pages:FactDetailPage}"
        Route="MainPage2" />


</Shell>
